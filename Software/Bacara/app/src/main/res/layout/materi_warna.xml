<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_huruf">

    <ImageButton
        android:id="@+id/backWarna"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Kembali ke halaman sebelumnya (home)"
        android:background="@drawable/back_button"/>

    <LinearLayout
        android:id="@+id/topButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Mode Button -->
        <ImageButton
            android:id="@+id/btnMode"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:background="@null"
            android:src="@drawable/materimenu"
            android:contentDescription="Kembali ke pilihan huruf"/>

        <!-- Play Button -->
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="80sp"
            android:layout_height="60sp"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:src="@drawable/playicon"
            android:contentDescription="Play Suara"/>

        <!-- Auto Text Button -->
        <ImageButton
            android:id="@+id/btnAuto"
            android:layout_width="wrap_content"
            android:layout_height="60sp"
            android:layout_marginStart="8dp"
            android:background="@drawable/auto_button"
            android:contentDescription="Play otomatis"/>
    </LinearLayout>

    <!-- Tombol kiri -->
    <ImageButton
        android:id="@+id/prev_warna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:background="@null"
        android:src="@drawable/leftbutton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card"
                android:layout_gravity="center"/>

            <View
                android:id="@+id/warna"
                android:layout_width="120sp"
                android:layout_height="120sp"
                android:layout_gravity="center"
                android:background="@color/red3" />
        </FrameLayout>


        <TextView
            android:id="@+id/simbolSama"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:fontFamily="@font/baloo_regular"
            android:text="="
            android:shadowColor="@color/black"
            android:shadowRadius="1"
            android:shadowDy="12"
            android:textColor="#FFCC4D"
            android:textSize="100sp" />

        <TextView
            android:id="@+id/huruf_warna"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:background="@drawable/bg_card"
            android:fontFamily="@font/baloo_regular"
            android:gravity="center"
            android:text="Merah"
            android:textColor="@color/word_yellow"
            android:textSize="40sp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="center">
        </FrameLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/next_warna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:src="@drawable/right_button" />

    <ImageButton
        android:id="@+id/btnSuara"
        android:layout_width="130sp"
        android:layout_height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/suara_button" />
</RelativeLayout>
