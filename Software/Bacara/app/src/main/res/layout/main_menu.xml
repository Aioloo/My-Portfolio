<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_home"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/profilLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Profil"
                    android:src="@drawable/profil" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/nickameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hallo, User!"
                        android:textColor="@color/green_button"
                        android:textSize="24sp"
                        android:fontFamily="@font/baloo_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayo belajar membaca :)"
                        android:textColor="@color/green_button"
                        android:textSize="14sp"
                        android:fontFamily="@font/baloo2" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notif" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/dailyCard"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_daily"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:padding="16dp">

                <!-- Konten utama -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/baloo_regular"
                        android:text="DAILY"
                        android:textColor="@color/word_yellow"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-15dp"
                        android:fontFamily="@font/baloo_regular"
                        android:text="CHALLENGE"
                        android:textColor="@color/word_yellow"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-10dp"
                        android:fontFamily="@font/baloo2"
                        android:text="Selesaikan Quiz Harian!!"
                        android:textColor="@color/word_yellow"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/button_daily"
                        android:layout_width="121dp"
                        android:layout_height="50dp"
                        android:backgroundTint="@color/word_yellow"
                        android:fontFamily="@font/baloo_regular"
                        android:text="@string/lets_go"
                        android:textColor="@color/green_button" />
                </LinearLayout>

                <!-- Puzzle keluar dari frame -->
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="end|top"
                    android:src="@drawable/puzzle"
                    android:translationX="40dp"
                    android:translationY="-30dp" />
            </FrameLayout>

            <!-- Kategori Pembelajaran -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori Pembelajaran :"
                android:textColor="@color/green_button"
                android:textSize="18sp"
                android:fontFamily="@font/baloo_regular"
                android:layout_marginTop="16dp" />

            <!-- Menu Cards -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:alignmentMode="alignMargins"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:id="@+id/materi_huruf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_huruf" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:text="Huruf"
                        android:textColor="@color/green_word"
                        android:fontFamily="@font/baloo_regular"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/materi_angka"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_angka" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:text="Angka"
                        android:textColor="@color/green_word"
                        android:fontFamily="@font/baloo_regular"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/materi_warna"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_warna" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:text="Warna"
                        android:textColor="@color/green_word"
                        android:fontFamily="@font/baloo_regular"
                        android:textSize="24dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/materi_barang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/bg_card"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_barang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_gravity="center"
                        android:text="Barang"
                        android:textColor="@color/green_word"
                        android:fontFamily="@font/baloo_regular"
                        android:textSize="24dp" />
                </LinearLayout>

            </GridLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
