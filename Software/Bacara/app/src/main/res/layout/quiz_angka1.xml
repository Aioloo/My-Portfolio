<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_quiz"
    tools:context=".QuizAngka">

    <!-- Tombol Kembali -->
    <ImageButton
        android:id="@+id/back_quizangka"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Kembali ke halaman sebelumnya (home)"
        android:background="@drawable/back_button"/>
    <!-- Tombol Next -->
    <ImageButton
        android:id="@+id/next_quizangka"
        android:layout_width="70sp"
        android:layout_height="60sp"
        android:layout_marginTop="25sp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/next_button"
        android:contentDescription="Next" />

    <FrameLayout
        android:id="@+id/frameProgress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40sp"
        android:layout_toStartOf="@+id/next_quizangka"
        android:layout_toEndOf="@+id/back_quizangka">

        <ProgressBar
            android:id="@+id/progress_quizangka1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progress="50"
            android:max="100"
            android:progressDrawable="@drawable/level_bar" />

        <TextView
            android:id="@+id/tvProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Soal 1 dari 3"
            android:textSize="16sp"
            android:textColor="@color/green_progress"
            android:fontFamily="@font/baloo_regular"/>
    </FrameLayout>


    <!-- Pertanyaan -->
    <TextView
        android:id="@+id/tvPertanyaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yang manakah angka 'Satu' itu ??"
        android:textSize="30sp"
        android:textColor="@color/green_button"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/frameProgress"
        android:fontFamily="@font/baloo_regular"
        android:layout_marginTop="24dp" />

    <!-- Pilihan angka -->
    <LinearLayout
        android:id="@+id/layoutPilihan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tvPertanyaan"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/pilihan1angka"
            style="@style/cardPilihan"
            android:text="9"
            android:fontFamily="@font/baloo_regular"
            android:textSize="110sp"/>

        <TextView
            android:id="@+id/pilihan2angka"
            style="@style/cardPilihan"
            android:text="8"
            android:fontFamily="@font/baloo_regular"
            android:textSize="110sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/pilihan3angka"
            style="@style/cardPilihan"
            android:text="1"
            android:fontFamily="@font/baloo_regular"
            android:textSize="110sp" />

    </LinearLayout>
</RelativeLayout>
