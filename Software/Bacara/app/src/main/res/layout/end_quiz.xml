<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_quiz"> <!-- Warna latar belakang -->

    <!-- Tombol back -->
    <ImageButton
        android:id="@+id/back_quizhuruf"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:contentDescription="Kembali ke halaman sebelumnya (home)"
        android:background="@drawable/back_button"/>

    <FrameLayout
        android:id="@+id/progressEnd"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="40sp"
        android:layout_toEndOf="@+id/back_quizhuruf">

        <ProgressBar
            android:id="@+id/progress_quizend"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progress="100"
            android:max="100"
            android:progressDrawable="@drawable/level_bar" />

        <TextView
            android:id="@+id/tvProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/green_progress"
            android:fontFamily="@font/baloo_regular"/>
    </FrameLayout>


    <!-- Teks ucapan selamat -->
    <TextView
        android:id="@+id/tv_congrats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat quiz mu sudah selesai semua !!"
        android:textColor="@color/green_button"
        android:fontFamily="@font/baloo_regular"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_below="@id/progressEnd" />

    <!-- Tombol Back to Menu -->
    <ImageButton
        android:id="@+id/keMenu"
        android:layout_width="250dp"
        android:layout_height="70sp"
        android:textColor="@color/green_button"
        android:layout_below="@id/tv_congrats"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/yellow_button"
        android:contentDescription="Kembali ke Menu"/>

</RelativeLayout>
